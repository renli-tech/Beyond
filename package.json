{
  "name": "beyond",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/babel**",
      "**/eslint**",
      "**/jest"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start:docs": "yarn --cwd ./docs start",
    "bootstrap": "lerna bootstrap --use-workspaces && yarn hooks:install",
    "build": "lerna run --stream build",
    "build:docs": "yarn --cwd ./docs build",
    "deploy:docs": "yarn --cwd ./docs deploy",
    "rebuild": "run-s clean bootstrap build",
    "clean": "lerna run clean && lerna clean -y",
    "test": "lerna run --stream test",
    "bundle": "run-s clean bootstrap fix build test",
    "watch": "lerna run watch --parallel --concurrency 999",
    "dev": "lerna run dev",
    "prebootstrap": "yarn",
    "fix": "run-s fix:*",
    "fix:code": "yarn lint:code --fix",
    "fix:svg": "node scripts/format-svg.js",
    "fix:other": "yarn prettier --write",
    "hooks:uninstall": "node node_modules/husky/husky.js uninstall",
    "hooks:install": "node node_modules/husky/husky.js install",
    "lint": "run-p --continue-on-error lint:*",
    "lint:code": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .ts,.tsx .",
    "lint:other": "yarn prettier --check",
    "lerna:publish": "npx lerna publish --conventional-commits",
    "lerna:changed": "npx lerna changed",
    "prettier": "prettier \"**/*.{md,css,scss,yaml,yml}\"",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.17.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn fix:code"
    ],
    "*.{md,css,scss,yaml,yml}": [
      "yarn fix:other"
    ],
    "*.svg": [
      "yarn fix:svg"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/runtime": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^13.1.0",
    "@rollup/plugin-alias": "^3.1.0",
    "@rollup/plugin-babel": "^5.0.3",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-replace": "^2.3.1",
    "@rollup/pluginutils": "^3.1.0",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/node-logger": "^6.3.6",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.6",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.12.28",
    "@types/prettier": "^1.16.4",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-test-renderer": "^17.0.1",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.21.0",
    "autoprefixer": "^9.7.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.1.0",
    "chalk": "^3.0.0",
    "commitlint": "^8.3.5",
    "copy-webpack-plugin": "6.4.1",
    "cross-env": "^7.0.2",
    "csstype": "^3.0.8",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "figures": "3.1.0",
    "filesize": "^6.0.1",
    "fs-extra": "^8.1.0",
    "gzip-size": "^5.1.1",
    "husky": "^4.2.3",
    "jest": "^27.0.6",
    "jest-environment-jsdom": "^27.0.6",
    "jest-watch-typeahead": "^0.6.4",
    "lerna": "^4.0.0",
    "lerna-changelog": "^0.8.3",
    "lint-staged": "^10.2.2",
    "lodash": "^4.17.15",
    "log-update": "^3.3.0",
    "npm-run-all": "4.1.5",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "react-test-renderer": "^17.0.2",
    "resolve": "^1.15.1",
    "rimraf": "^3.0.0",
    "rollup": "^2.6.1",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.3",
    "svgo": "1.3.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "uuid": "^8.3.2"
  }
}
