{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore: publish new release",
      "registry": "https://npm.pkg.github.com"
    }
  },
  "packages": [
    "packages/*",
    "examples/*"
  ],
  "nohoist": [
    "*react*",
    "*react*/**",
    "*react-native*",
    "*react-native*/**"
  ]
}